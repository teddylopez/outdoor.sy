<table class="center-table">
  <thead>
    <tr>
      <th><%= sortable "first_name", "First Name" %></th>
      <th><%= sortable "last_name", "Last Name" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "vehicle_type", "Vehicle Type" %></th>
      <th>Vehicle Name</th>
      <th><%= sortable "length", "Vehicle Length (ft.)" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr data-link="<%= customer_path(customer) %>" class="clickable-row">
        <td><%= titleize_name(customer.first_name) %></td>
        <td><%= titleize_name(customer.last_name) %></td>
        <td><%= customer.email %></td>
        <td><%= titleize_name(customer.vehicle.vehicle_type) %></td>
        <td><%= titleize_name(customer.vehicle.name) %></td>
        <td><%= format_length(customer.vehicle.length) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
